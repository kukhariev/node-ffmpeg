{
  "name": "@dropb/ffmpeg",
  "version": "0.2.0",
  "description": "Simple node.js wrapper for FFmpeg",
  "engines": {
    "node": ">=14.18.20"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "lint": "rome check src",
    "format": "rome format --write src",
    "test": "mocha"
  },
  "author": {
    "name": "kukhariev",
    "email": "q_h@inbox.ru"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/ffmpeg-static": "3.0.1",
    "@types/mocha": "9.1.1",
    "@types/node": "14.18.31",
    "@types/rimraf": "3.0.2",
    "chai": "4.3.6",
    "ffmpeg-static": "4.4.1",
    "mocha": "9.2.2",
    "rimraf": "3.0.2",
    "rome": "0.9.2-next",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@dropb/expand": "^1.0.0",
    "@dropb/ffmpeg-progress": "^2.0.0",
    "@dropb/ffprobe": "^2.0.1",
    "spawn-args": "^0.2.0"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "require": "ts-node/register"
  }
}
